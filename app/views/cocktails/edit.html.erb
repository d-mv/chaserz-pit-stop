<div class='spacer'></div>
<div class='container'>
  <div class='row'>
    <%= simple_form_for [@cocktail] do |f| %>
      <div class="form-group">
        <%= f.label 'Cocktail name:', class: 'title' %>
        <%= f.input_field :name, prompt: "enter new cocktail name", as: :string, class: 'form-control', :autofocus => true %>
      </div>
      <div class="form-group">
        <%= f.label 'Cocktail photo URL:', class: 'title' %>
        <%= f.input_field :photo, prompt: "add cocktail photo", as: :url, class: 'form-control' %>
      </div>
      <%= f.label 'or upload it (PNG only):', class: 'title' %>
      <%# <div class='image-form-titles'> %>

      <%= f.file_field :image, class: 'form-control'  %>
      <%= f.hidden_field :image_cache, as: :hidden %>
      <%# <%= image_tag(@cocktail.image_url) if @cocktail.image? %> %>
      <%# </div> %>
      <%= @cocktail.image_url %>
      <%# cl_image_tag @cocktail.image, height: 300, width: 400, crop: :fill %>
      <p></p>
      <div class='center-in-div'>
        <%= f.button :submit, "UPDATE", class: "button-main" %>
        <button type='button' class='button-secondary' onclick="window.history.go(-1)">cancel</button>
      </div>
    <% end %>
  </div>
</div>
